<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BottomDialog." parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryVariant">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@color/colorWhiteBackground</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />


    <style name="regular_text">
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/bottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/bottomNavigationView.InActive</item>
    </style>

    <!-- inactive tab icon style -->
    <style name="bottomNavigationView.InActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="bottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="padding_parent_theme">
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorWhiteText1</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="padding_top_14" parent="padding_parent_theme">
        <item name="android:paddingTop">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
    </style>

    <style name="black_regular_text" parent="regular_text">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="black_regular_12sp" parent="black_regular_text">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
</resources>